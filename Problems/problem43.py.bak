## zensar problem 

exp = '111/20'
if '*' in exp:  
    a,b = [int(i) for i in exp.split('*')]
    c = 1
    mul = b
    s = 0
    while c < b:
        mul = mul + a
        s += mul
        c += 1
    print(s)
    print(mul)
    
    
else:
    a,b = [int(i) for i in exp.split('/')]
    c = 0 
    s = 0
    div = a
    while div != a%b:
        div = div-b
        s += div
        c += 1
    print(s)
    print(c)
        
         
    
        


    
